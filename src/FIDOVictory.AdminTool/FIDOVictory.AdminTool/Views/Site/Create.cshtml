@model FIDOVictory.AdminTool.Models.Site.SiteModel

@{
    ViewBag.Title = "Create Site";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        @using (Html.BeginForm("Create", "Site", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                <label for="Name" class="control-label col-md-3">Name:</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
            <br />
            <br />
            <br />
            <br />
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <div class="pull-right">
                        <a href="@Url.RouteUrl("ListSites")" class="btn btn-default">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
        }
    </div>
    <div class="col-md-2"></div>
</div>
