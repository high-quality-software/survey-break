@model PagedList.IPagedList<FIDOVictory.AdminTool.Models.Site.SiteItem>
@using PagedList.Mvc;
@{
    ViewBag.Title = "List Sites";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <div class="row">
            <div class="col-md-10">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Filter
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @using (Html.BeginForm("Index", "Site", FormMethod.Get, new { @class = "form-inline col-md-12", role = "form" }))
                                {
                                    <div class="form-group col-md-11">
                                        @Html.TextBox("SearchFilter", ViewBag.SearchFilter as string, new { @class = "form-control", placeholder = "Type any portion of site name ..." })
                                    </div>
                                    <div class="form-group col-md-1">
                                        <button class="btn btn-default" type="submit"><span>Search</span></button>
                                    </div>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-2">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                &nbsp;
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div class="pull-right">
                                    <a href="@Url.RouteUrl("GetCreateSite")" class="btn btn-default">Create Site</a>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Site ID
                            </th>
                            <th>
                                Site Name
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SiteID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    <div class="pull-right">
                                        <a href="@Url.RouteUrl("GetEditSiteBySiteID", new { id = item.SiteID }, null)">Edit</a>
                                        <span>|</span>
                                        <a href="@Url.RouteUrl("GetDeleteSiteBySiteID", new { id = item.SiteID }, null)">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="pull-left">Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</div>
                <div class="pull-right">@Html.PagedListPager(Model, page => Url.Action("Index") + "?page=" + page + "&SearchFilter=" + ViewBag.Session.CurrentSiteSearchFilter.Filter)</div>
            </div>
        </div>
    </div>
    <div class="col-md-1"></div>
</div>
