@model FIDOVictory.AdminTool.Models.Chemical.ChemicalModel

@{
    ViewBag.Title = "Edit Chemical";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        @using (Html.BeginForm("Edit", "Chemical", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.HiddenFor(model => model.ChemicalID);
            
            <div class="form-group">
                <label for="ChemicalID" class="control-label col-md-3">Chemical ID:</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.ChemicalID, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                <label for="ChemicalTypeID" class="control-label col-md-3">Chemical Type:</label>
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.ChemicalTypeID, (SelectList)ViewBag.ChemicalTypeList, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ChemicalTypeID)
                </div>
            </div>
            <div class="form-group">
                <label for="Name" class="control-label col-md-3">Name:</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
            <br />
            <br />
    <br />
    <br />
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <div class="pull-right">
                        <a href="@Url.RouteUrl("ListChemicals")" class="btn btn-default">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
            <br />
            <br />
            <br />
            <br />
    <br />
    <br />
    <br />
    <br />
        }
    </div>
    <div class="col-md-2"></div>
</div>

@section scripts{
    <script type="text/javascript">

        $(document).ready(function () {
            var chemicalTypeIDSelector = $("#ChemicalTypeID");
            chemicalTypeIDSelector.select2();
        });
    </script>
}