@model PagedList.IPagedList<FIDOVictory.AdminTool.ViewModels.TrialMapReport>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Maps";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <div class="row">
            <div class="col-md-10">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Filter
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @using (Html.BeginForm("Maps", "Trial", FormMethod.Get, new { @class = "form-inline col-md-12", role = "form" }))
                                {
                                    <div class="form-group col-md-3">
                                        @Html.TextBox("SearchTrialID", ViewBag.SearchTrialID as string, new { @class = "form-control", placeholder = "Type trial ID ..." })
                                    </div>
                                    <div class="form-group col-md-8">
                                        @Html.TextBox("SearchTrialName", ViewBag.SearchTrialName as string, new { @class = "form-control", placeholder = "Type any portion of trial name ..." })
                                    </div>
                                    <div class="form-group col-md-1">
                                        <button class="btn btn-default" type="submit"><span>Search</span></button>
                                    </div>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-2">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Trial ID
                            </th>
                            <th>
                                Trial Name
                            </th>
                            <th>
                                Farm Name
                            </th>
                            <th>
                                Year
                            </th>
                            <th>
                                Image
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TrialID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Farm)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Year)
                                </td>
                                <td>
                                    <img src="@Url.Content("~/Image?id=" + Html.DisplayFor(modelItem => item.ImageID) )" alt="@Html.DisplayFor(modelItem => item.ImageID)" width="100" height="100" />
                                    <a target="_blank" href="@Url.Content("~/Image?id=" + Html.DisplayFor(modelItem => item.ImageID) )">Open</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="pull-left">Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</div>
                <div class="pull-right">@Html.PagedListPager(Model, page => Url.Action("Maps") + "?page=" + page + "&SearchTrialID=" + ViewBag.Session.CurrentTrialSearchFilter.TrialID + "&SearchTrialName=" + ViewBag.Session.CurrentTrialSearchFilter.TrialName)</div>
            </div>
        </div>


    </div>
    <div class="col-md-1"></div>
</div>






